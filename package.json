{
  "name": "yyy",
  "version": "0.1.0",
  "private": true,
  "jest": {
    "setupFiles": [
      "<rootDir>/conf/shim.js",
      "<rootDir>/conf/setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/conf/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "src/*.js",
      "!src/registerServiceWorker.js",
      "!src/index.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|png|svg)$": "<rootDir>/src/__mocks__/file-mocks.js",
      "\\.(css|less|scss)$": "<rootDir>/src/__mocks__/style-mocks.js"
    }
  },
  "dependencies": {
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-scripts": "1.0.17",
    "ux-react-styleguide": "^1.3.0",
    "ux-styleguide": "^2.3.0",
    "uxicon": "^2.3.0"
  },
  "scripts": {
    "start": "NODE_ENV=development && react-scripts start",
    "build": "react-scripts build",
    "lint": "eslint src",
    "jest": "NODE_ENV=development && jest --watch",
    "jest:verbose": "NODE_ENV=development && jest --watch --verbose",
    "jest:cover": "NODE_ENV=development && jest --watch --coverage --verbose",
    "jest:once": "NODE_ENV=development && nyc jest --verbose",
    "jest:update": "NODE_ENV=development && jest --updateSnapshot",
    "test": "react-scripts test --env=jsdom",
    "test:cover": "BABEL_ENV=test ava **/*.test.js",
    "cover": "NODE_ENV=development && jest --watch --coverage --verbose",
    "coveronce": "NODE_ENV=development && jest --coverage --verbose",
    "open-coverage": "open ./coverage/lcov-report/index.html",
    "check-coverage": "nyc check-coverage --statements 0 --branches 0 --functions 0 --lines 0",
    "report-coverage": "nyc report --reporter-text-lcov | codecov",
    "eject": "react-scripts eject",
    "flow": "flow; test $? -eq 0 -o $? -eq 2"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "codecov.io": "^0.1.6",
    "cucumber": "^3.1.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "enzyme-to-json": "^3.2.2",
    "eslint": "^4.12.1",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-react": "^7.5.1",
    "flow-bin": "^0.59.0",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "nyc": "^11.4.1",
    "react-flexbox-grid": "^2.0.0",
    "react-redux": "^5.0.6",
    "react-redux-form": "^1.16.1",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.1.1",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.3.0",
    "redux-thunk": "^2.2.0",
    "require-hacker": "^3.0.1",
    "sinon": "^4.1.2"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test:cover && npm run check-coverage"
    },
    "commitizen": {
      "pre-commit": "node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "debug": false
  },
  "ava": {
    "require": [
      "babel-register",
      "./null-compiler"
    ],
    "babel": {}
  }
}
